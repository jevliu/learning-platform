# ===========================================
# 在线学习平台 - 环境变量配置
# ===========================================

# 数据库配置
# ===========================================
# 数据库主机地址
DB_HOST=localhost

# 数据库端口 (MySQL默认3306)
DB_PORT=3306

# 数据库用户名
DB_USER=root

# 数据库密码 (请修改为您的实际密码)
DB_PASSWORD=root

# 数据库名称
DB_NAME=learning_platform_demo

# 数据库连接池配置
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# 服务器配置
# ===========================================
# 服务器端口
PORT=3001

# 服务器环境 (development/production)
NODE_ENV=development

# JWT配置
# ===========================================
# JWT密钥 (请生成一个安全的随机密钥)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# JWT令牌过期时间 (24小时)
JWT_EXPIRES_IN=24h

# 文件上传配置
# ===========================================
# 文件上传目录
UPLOAD_DIR=uploads

# 最大文件大小 (10MB)
MAX_FILE_SIZE=10485760

# 允许的文件类型 (用逗号分隔)
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,xls,xlsx,txt,jpg,jpeg,png,gif,mp4,avi,mov

# CORS配置
# ===========================================
# 允许的前端域名
FRONTEND_URL=http://localhost:3000

# 是否允许凭证
CORS_CREDENTIALS=true

# 日志配置
# ===========================================
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 是否启用详细日志
VERBOSE_LOGGING=true

# 安全配置
# ===========================================
# 密码加密轮数 (bcrypt)
BCRYPT_ROUNDS=10

# 会话超时时间 (毫秒)
SESSION_TIMEOUT=86400000

# 开发模式配置
# ===========================================
# 是否启用热重载
ENABLE_HOT_RELOAD=true

# 是否启用调试模式
DEBUG_MODE=true

# 示例配置说明：
# ===========================================
# 1. 复制此文件为 .env
# 2. 修改数据库密码和JWT密钥
# 3. 根据您的环境调整其他配置
# 4. 生产环境请设置 NODE_ENV=production
# 5. 生产环境请使用更强的JWT密钥 